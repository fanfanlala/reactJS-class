h1
  margin-left 50px
  color green
  *
    margin 0
    padding 0
font-size = 16px
font = 12px/16px '微软雅黑'
$width = 16px
$color = red
#div1
  font font
  width $width
  //(@width)调用自身的width
  margin-left (@width/2)
  color $color

body
  color green
  ul
    li
      line-height 20px
      font-size 40px
      list-style-type none

add(a,b=a)
  a=unit(a,px)
  b=unit(b,px)
  return a b a+b

h2
  width add(2000px)[0]
  height add(300px)[1]
  font-size add(20px,30px)[2]


color = pink
li
  background-color color
  border 10px solid saturate(color,50%)

